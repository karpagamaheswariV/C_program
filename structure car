#include <stdio.h>

struct car{
 char name[20];
 int year;
};

int main(void) {
  struct car c[3];
  printf("Enter the name and year of the car:\n");  
  for(int i=0;i<3;i++){
  //printf("Enter the name and year of the car:");  
  scanf("%s",c[i].name);
  scanf("%d",&c[i].year);
  }
  printf("The name and year of the car are:\n");
  for(int i=0;i<3;i++){
    printf("%s\t",c[i].name);
    printf("%d\n",c[i].year);}
  
  return 0;
}
