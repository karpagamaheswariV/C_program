int n=9;
  for (int i=1;i<=n+1;i++){
    for(int j=n+1;j>=1;j--){
      if(j<=i)
        printf("^");
      else
        printf(" ");
    }//printf("\n");
    for( int k=1;k<=n;k++){
      if(k<i)
        printf("^");
      else
        printf(" ");
    }printf("\n");
  }
 
  return 0;
}
